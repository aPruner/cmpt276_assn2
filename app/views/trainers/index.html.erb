<p id="notice"><%= notice %></p>

<h1>Trainers</h1>

<div class="erblink">
  <%= link_to 'New Trainer', new_trainer_path %>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Level</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trainers.each do |trainer| %>
      <tr>
        <td><%= trainer.name %></td>
        <td><%= trainer.level %></td>
        <td><%= link_to 'Show', trainer %></td>
        <td><%= link_to 'Edit', edit_trainer_path(trainer) %></td>
        <td><%= link_to 'Destroy', trainer, method: :delete, data: { confirm: 'Are you sure? You\'ll be deleting all tokimon associated with this trainer.' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
